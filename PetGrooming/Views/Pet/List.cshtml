@model List<PetGrooming.Models.Pet>

@{
    ViewBag.Title = "List";
}

<h2>List of Pets</h2>

@{ 
    <!--displaying a list of pets that is stored in database-->
    foreach(var Pet in Model)
    {
    <div>
        <span><a href="/Pet/Show/@Pet.PetID">@Pet.PetName</a></span>
        <span>@Pet.Species.Name</span>
        <span>@Pet.Weight</span>
        <span><a href="/Pet/Update/@Pet.PetID">Update</a></span>
        <a href="/Pet/Delete/@Pet.PetID">Delete Pet</a><!--delete a particular pet-->
    </div>
    }
    <a href="/Pet/New">Add new Pet</a><!--redirect to add page to add a new pet to the database-->
}