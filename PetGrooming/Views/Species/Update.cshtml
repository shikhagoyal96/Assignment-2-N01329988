@model PetGrooming.Models.Species

@{
    ViewBag.Title = "Update";
}

<h2>Update @Model.Name</h2>
<!--updating the details of a particular specie via POST method-->
<form action="/Species/Update/@Model.SpeciesID" method="POST">
    <span>Species Name</span><input type="text" placeholder="@Model.Name" id="SpeciesName" name="SpeciesName" /><br />
    
    <input type="submit" value="update species" />
</form>
